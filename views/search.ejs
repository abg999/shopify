<% include ./partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/viewall.css ">
<div style="background-color: white; height:9em; padding: 0.7em; margin-top:4.5em;" class="container">
	<h2 style="text-align: center;">Search Results</h2>
	<h4 style="text-align: center; opacity:0.6;"> <%= count %> Items </h4>
	<% if(count<1){ %>
		<h5 style="text-align: center;">No matches found, please try again later</h5>
	<% 	} %>
</div>
<div style="background-color: white; border-top: 5px solid #f1f3f6;" class="container">
<div class="row text-center" style="display:flex; flex-wrap: wrap;"><!--row text center will set text to the center of every element--> 
		<% products.forEach(function(product){ %>
            <div class="col-md-2 col-sm-4 col-xs-6">
          
            	<a class="link" href="/<%= product._id %>">
            		 <img class="prod-image" src="<%= product.image1 %>">
            		 <div class="caption">
                       <h4><%= product.modelname %></h4>
                       <h5><%= product.memory %></h5>
                   	 </div>
                </a>
           
            </div>
        <% }); %>        
	</div>
</div>

<% include ./partials/footer %>
